<!DOCTYPE html>
<html>

<head>
    <title>Doctor Consultation</title>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" type="text/css" href="styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">
    <style>
        .footer li a:hover {
            color: gold;

        }



        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        main {
            max-width: 800px;
            margin: 0 auto;
            padding: 2rem;
        }

        .doctor-card {
            background-color: #f5f5f5;
            border-radius: 0.5rem;
            display: flex;
            justify-content: space-around;
            flex-direction: row;
            align-items: center;
            padding: 1rem;
            margin-bottom: 2rem;
        }

        .doctor-card img {
            width: 150px;
            height: 150px;
            margin-right: 2rem;
            border-radius: 50%;
            object-fit: cover;
        }

        .details {
            flex: 1;
        }

        .consultation-options {
            margin-left: 2rem;
        }

        .option {
            margin-bottom: 1rem;
        }

        input[type="radio"] {
            margin-right: 0.5rem;
        }

        .footer li a {


            border-radius: 20px;

        }

        .footer {
            background-color: black;
            color: aliceblue;

            align-items: center;


            color: #FCF8E8;
            display: flex;
            justify-content: space-around;

            width: 100%;
            ;
            flex-wrap: wrap;
            flex-grow: inherit;

        }

        .footer li a {
            color: grey;
        }

        .footer h4 {
            color: white;
        }

        .footer div {
            margin: 10px;
            padding: 20px;

        }


        .footer li a:hover {
            color: gold;

        }
    </style>
</head>

<body>

    <%-include("header") -%>

        <main>

            <%list.forEach(function(doctor){%>
                <section class="doctor-card">
                    <img src="doctor.jpg" alt="Doctor image">
                    <div class="details">
                        <h2>
                            <%=doctor.name%>
                        </h2>
                        <p>Specialization: <%=doctor.Specialization%>
                        </p>
                        <p>Experience: <%=doctor.experience%>
                        </p>
                        <p>District: <%=doctor.district%>
                        </p>
                        <p>Phone: <%=doctor.phoneNumber%>
                        </p>
                        <p>Email: <%=doctor.email%>
                        </p>
                        <section class="consultation-options">
                            <h4>Consultation Options</h4>
                            <div class="option">
                                <input type="radio" id="online-option" name="consultation-option" value="online">
                                <label for="online-option">Online Consultation</label>
                            </div>
                            <div class="option">
                                <input type="radio" id="offline-option" name="consultation-option" value="offline">
                                <label for="offline-option">Offline Consultation</label>
                            </div>


                        </section>
                        <u>
                            <h4 style="font-size: 125%;">Select Date & Time:</h4>
                        </u>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="date" style="padding-bottom: 5%; font-size: 100%;">Select Date</label>
                                    <input type="patient_dateOfConsultaion" class="form-control" id="date" style="font-size: 100%;" />
                                </div>
                            </div>
                            </div>
                            <div>

                                <h4>Available time slots</h4>
                                <label for="time" style="padding-bottom: 1%; font-size: 100%; ">Select Time</label>
                                <select class="form-control" id="time" style="font-size: 100%;">
                                    <option>
                                        <%=doctor.timeslot1%>
                                    </option>
                                    <option>
                                        <%=doctor.timeslot2%>
                                    </option>
                                    <option>
                                        <%=doctor.timeslot3%>
                                    </option>
    
                                </select>

                                <p></p>
                                <button type="button"  class="book-now-btn" onclick="alert('Booking Succesful')">Book
                                    Now</button>
                            </div>
                        </div>

                </section>
                <%})%>

        </main>
        <%-include("footer") %>
        <script>
            const consultationOptions = document.querySelectorAll('input[name="consultation-option"]');

            consultationOptions.forEach(option => {
                option.addEventListener('change', () => {
                    if (option.value === 'online') {
                        alert('Online consultation selected');
                    } else if (option.value === 'offline') {
                        alert('Offline consultation selected');
                    }
                });
            });

        </script>
</body>

</html>