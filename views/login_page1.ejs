<script>
    const form = document.querySelector('form');

    form.addEventListener('submit', e => {
        e.preventDefault();

        const password = document.getElementById('password');
        const errorSpan = document.querySelector('.form-error');

        // Validate password
        let isValid = true;

        if (password.value.length < 12) {
            errorSpan.innerHTML = 'Password must be at least 12 characters.';
            isValid = false;
        } else if (!/[A-Z]/.test(password.value)) {
            errorSpan.innerHTML = 'Password must contain at least one uppercase letter.';
            isValid = false;
        } else if (!/[a-z]/.test(password.value)) {
            errorSpan.innerHTML = 'Password must contain at least one lowercase letter.';
            isValid = false;
        } else if (!/[0-9]/.test(password.value)) {
            errorSpan.innerHTML = 'Password must contain at least one number.';
            isValid = false;
        } else if (!/[!@#$?]/.test(password.value)) {
            errorSpan.innerHTML = 'Password must contain at least one special character.';
            isValid = false;
        }

        // Submit form
        if (isValid) {
            document.getElementById('submitButton').disabled = true;
            form.submit();
        }
    });

</script>

