    <div class="modal fade" id="signupModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Sign Up</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form class="signup-form" action="#" method="post">
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="text" class="form-control" id="name" name="name" placeholder="Enter your name" required>
                        </div>
        
                        <div>
                            <label for="password">Password:</label>
                            <p><input type="password" id="password" name="password" placeholder="Enter Password" required /></p>
                            <span class="form-error"></span>
                        </div>
                        

                        <div class="form-group">
                            <label for="phoneNumber">Phone Number</label>
                            <input type="tel" class="form-control" id="phoneNumber" name="phoneNumber" placeholder="Enter your phone number" required>
                        </div>
                        <div class="form-group">
                            <label for="email">Email Address</label>
                            <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email address" required>
                        </div>
                        <div class="form-group">
                            <label for="address">Address</label>
                            <input type="text" class="form-control" id="address" name="address" placeholder="Enter your address" required>
                        </div>
                        <div class="form-group">
                            <label for="emergencyNumber">Emergency Contact Number</label>
                            <input type="tel" class="form-control" id="emergencyNumber" name="emergencyNumber" placeholder="Enter emergency contact number" required>
                        </div>
                        <button type="submit" class="btn btn-primary" id="submitButton">Sign Up</button>
                    </form>
                    
                    <script>
                        const form = document.querySelector('form');
            
                        form.addEventListener('submit', e => {
                            e.preventDefault();

                            const password = document.getElementById('password');
                            const errorSpan = document.querySelector('.form-error');
            
                            // Validate password
                            let isValid = true;
            
                            if (password.value.length < 12) {
                                errorSpan.innerHTML = 'Password must be at least 12 characters.';
                                isValid = false;
                            } else if (!/[A-Z]/.test(password.value)) {
                                errorSpan.innerHTML = 'Password must contain at least one uppercase letter.';
                                isValid = false;
                            } else if (!/[a-z]/.test(password.value)) {
                                errorSpan.innerHTML = 'Password must contain at least one lowercase letter.';
                                 isValid = false;
                            } else if (!/[0-9]/.test(password.value)) {
                                errorSpan.innerHTML = 'Password must contain at least one number.';
                                isValid = false;
                            } else if (!/[!@#$?]/.test(password.value)) {
                                errorSpan.innerHTML = 'Password must contain at least one special character.';
                                isValid = false;
                            }
            
                            // Submit form
                            if (isValid) {
                                document.getElementById('submitButton').disabled = true;
                                form.submit();
                            }
                        });
                    </script>

                </div>
            </div>
        </div>
