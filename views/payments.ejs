<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payment</title>
    <style>@import url('https://fonts.googleapis.com/css?family=Montserrat:400,700&display=swap');

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
          }
          
          body {
            font-family: 'Montserrat', sans-serif;
            font-size: 1.2rem;
            line-height: 1.6;
            color: #333;
            background-color: #f1f1f1;
          }
          
          .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 40px;
          }
          
          .section {
            background-color: #fff;
            box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.1);
            padding: 30px;
            border-radius: 5px;
            margin-bottom: 40px;
          }
          
          .contact h3 {
            font-size: 2rem;
            margin-bottom: 20px;
            text-align: center;
          }
          
          .contact p {
            margin-bottom: 20px;
          }
          
          .contact label {
            display: block;
            margin-bottom: 10px;
            font-weight: 700;
          }
          
          .contact input,
          .contact select {
            display: block;
            width: 100%;
            padding: 10px;
            font-size: 1.2rem;
            border-radius: 5px;
            border: none;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
            background-color: #f9f9f9;
          }
          
          .contact select {
            appearance: none;
            -webkit-appearance: none;
            -moz-appearance: none;
            background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path d="M18.364 7.454l-6.364 6.364-6.364-6.364-1.414 1.414 7.778 7.778 7.778-7.778-1.414-1.414z"/></svg>') no-repeat right 10px center/15px 15px;
          }
          
          .contact button[type="submit"] {
            background-color: #4285f4;
            color: #fff;
            font-size: 1.2rem;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
          }
          
          .contact button[type="submit"]:hover {
            background-color: #3367d6;
          }
          
          @media screen and (max-width: 600px) {
            .container {
              padding: 20px;
            }
            
            .contact h3 {
              font-size: 1.5rem;
            }
            
            .contact input,
            .contact select,
            .contact button[type="submit"] {
              font-size: 1rem;
            }
          }
          
</style>
</head>
<body>
   
<div class="container">
    <h1 class="maint"></h1>
    <div class="section animated bounceInLeft">
       
        <div class="contact">
            <h3>Payment Dashboard</h3>
            <form action="http://localhost:3000/" method="POST" onsubmit="return validateForm()">
              <p>
                <label for="name">Name</label>
                <input type="text" name="name" id="name" required>
              </p>
              <p>
                <label for="CVV">CVV</label>
                <input type="password" name="CVV" id="CVV" required>
              </p>
              <p>
                <label for="email">Email Address</label>
                <input type="email" name="email" id="email" required>
              </p>
              <p>
                <label for="phone">Phone Number</label>
                <input type="text" name="phone" id="phone" required>
              </p>
              <select name="cars" id="cars" style="font-size: 1.5rem;">
                <option value="999">₹999</option>
                <option value="3499">₹3499</option>
                <option value="9999">₹9999</option>
                
              </select>
              <p class="full">
                <button type="submit">Click here to pay</button>
              </p>
            </form>
            
            <script>
            function validateForm() {
              var name = document.getElementById("name").value;
             
              var email = document.getElementById("email").value;
              var phone = document.getElementById("phone").value;
              var CVV = document.getElementById("CVV").value;
            
              // Check if all fields are filled out
              if (name == "" || email == "" || phone == "" || CVV == "") {
                alert("Please fill out all fields.");
                return false;
              }
            
              // Check if phone number is valid
              if (!(/^\d{10}$/.test(phone))) {
                alert("Please enter a valid phone number.");
                return false;
              }
              if (!(/^\d{3}$/.test(CVV))) {
                alert("Please enter a valid 3 digit CVV number.");
                return false;
              }
            
              return true;
            }
            </script>
            
        </div>
    </div>
</div>





<script>

const buttons = document.querySelectorAll(".faq-toggle");

buttons.forEach((button) => {
button.addEventListener("click", () =>
button.parentElement.classList.toggle("active")
);
}); 
</script>
<%-include("footer") %>
</body>
</html>