<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payment</title>
    <style>@import url('https://fonts.googleapis.com/css?family=Montserrat:400,700&display=swap');

            .container {
    max-width: 960px;
    margin-left: auto;
    margin-right: auto;
    padding: 1em;
        }
        .maint {
    text-align: center;
	color: white;
}
.section {
    box-shadow: 0 0 20px 0 rgba(72, 94, 116, 0.7);
}
 
.section > * {
    padding: 1em;
}

.contact {
    background: #f9feff;
}
 
.contact form {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-gap: 20px;
}
 
.contact form label {
    display: block;
}

 
.contact form p input{
    width: 80%;
}

.contact form .full {
    grid-column: 1 / 3;
    width: 80%;
}
 
.contact form button, .contact form input, .contact form textarea {
    width: 100%;
    padding: 1em;
    border: 1px solid #c9e6ff;
}
 
.contact form button {
    background: #c9e6ff;
    border: 0;
    text-transform: uppercase;
}
 
.contact form button:hover, .contact form button:focus {
    background: #92bde7;
    color: #fff;
    outline: 0;
    transition: background-color 0.5s ease-out;
}
.contact form .full {
    grid-column: 1 / 3;
    width: 80%;
}
@media(min-width:700px) {
    .section {
        display: grid;
        grid-template-columns: 1fr 2fr;
    }
 
    .section > * {
        padding: 2em;
    }
 
    .compnay-info h3,  .maint {
        text-align: left;
    }
}

</style>
</head>
<body>
   
<div class="container">
    <h1 class="maint"></h1>
    <div class="section animated bounceInLeft">
        <div class="brandname">
            <h3>OPIHERBS</h3>
            <ul>
                <li> +91 7972560800</li>
                <li>opiherbs@gmail.com</li>
              
            </ul>
        </div>
        <div class="contact">
            <h3>Contact Us</h3>
            <form action="http://localhost:3000/" method="POST" onsubmit="return validateForm()">
              <p>
                <label for="name">Name</label>
                <input type="text" name="name" id="name" required>
              </p>
              <p>
                <label for="CVV">CVV</label>
                <input type="password" name="CVV" id="CVV" required>
              </p>
              <p>
                <label for="email">Email Address</label>
                <input type="email" name="email" id="email" required>
              </p>
              <p>
                <label for="phone">Phone Number</label>
                <input type="text" name="phone" id="phone" required>
              </p>
              <select name="cars" id="cars" style="font-size: 1.5rem;">
                <option value="999">₹999</option>
                <option value="3499">₹3499</option>
                <option value="9999">₹9999</option>
                
              </select>
              <p class="full">
                <button type="submit">Click here to pay</button>
              </p>
            </form>
            
            <script>
            function validateForm() {
              var name = document.getElementById("name").value;
              var company = document.getElementById("company").value;
              var email = document.getElementById("email").value;
              var phone = document.getElementById("phone").value;
              var message = document.getElementById("message").value;
            
              // Check if all fields are filled out
              if (name == "" || company == "" || email == "" || phone == "" || message == "") {
                alert("Please fill out all fields.");
                return false;
              }
            
              // Check if phone number is valid
              if (!(/^\d{10}$/.test(phone))) {
                alert("Please enter a valid phone number.");
                return false;
              }
            
              return true;
            }
            </script>
            
        </div>
    </div>
</div>





<script>

const buttons = document.querySelectorAll(".faq-toggle");

buttons.forEach((button) => {
button.addEventListener("click", () =>
button.parentElement.classList.toggle("active")
);
}); 
</script>
</script>
</body>
</html>