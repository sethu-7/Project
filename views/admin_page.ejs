  <div class="container">
  <div>
    <h2 style="text-align: center;" >Add New Offer</h2>
    <form action="/offers" method="POST" class="offers">
      <label for="image">Image URL:</label>
      <input type="text" id="image" name="image" required>
      <label for="title">Title:</label>
      <input type="text" id="title" name="title" required>
      <label for="description">Description:</label>
      <textarea id="description" name="description" required></textarea>
      <input type="submit" value="Submit" id="offersub" style="background-color: #007bff;">
    </form>
  </div>
  <div>
    <h2 style="text-align: center;">Delete An Offer By Title</h2>
  
    <form id="delete-offer-form" class="offers">
      <label for="title">Title:</label>
      <input type="text" id="title" name="title" required>
      <button type="submit" id="offersub" style="background-color: #dc3545;
    ;">Delete offer</button>
    </form>
  
    <script>
      const form = document.getElementById('delete-offer-form');
      form.addEventListener('submit', async (event) => {
        event.preventDefault();
    
        const title = form.title.value;
    
        try {
          // Send a DELETE request to the server with the offer title in the URL path
          const response = await fetch(`/offers/${title}`, { method: 'DELETE' });
    
          if (response.ok) {
            alert('Offer deleted successfully');
            // Reload the page to update the offer list
            location.reload();
          } else {
            const errorMessage = await response.text();
            throw new Error(errorMessage);
          }
        } catch (err) {
          console.error('Error deleting offer:', err);
          alert('An error occurred while deleting the offer');
        }
      });
    </script>
  
  </div>
