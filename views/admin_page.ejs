<script>
  const form = document.getElementById('docdel');
      form.addEventListener('submit', async (event) => {
        event.preventDefault();
    
        const email = form.email.value;
    
        try {
          // Send a DELETE request to the server with the offer title in the URL path
          const response = await fetch(`/admin/${email}`, { method: 'DELETE' });
    
          if (response.ok) {
            alert('doctor deleted successfully');
            // Reload the page to update the offer list
            location.reload();
          } else {
            const errorMessage = await response.text();
            throw new Error(errorMessage);
          }
        } catch (err) {
          console.error('Error deleting doctor:', err);
          alert('An error occurred while deleting the doctor');
        }
      });
</script>

